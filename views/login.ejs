<%- include('header') -%>
<% if (message.length > 0) { %>
	<div class='alert alert-danger'><%= message %></div>
<% } %>
<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>
			<h2>Login</h2>
			<form action='/login' method='post'>
				<div class='form-group'>
					<label for='emailInput'>Email</label>
					<input name='email' id='emailInput' class='form-control' type="email" placeholder='you@your-domain.com'>
				</div>
				<div class='form-group'>
					<label for='passwordInput'>Password</label>
					<input name='password' id='passwordInput' class='form-control' type="password" placeholder='Shhh! Keep this secret.'>
				</div>

				<button type="submit" class='btn btn-primary btn-block'>Login</button>
			</form>

			<hr>

			<div class='row'>
				<p class='text-center'>Need an account? <a href="/signup">Signup</a></p>
				<p class='text-center'>Or go <a href="/">home</a>.</p>
			</div>
		</div>
	</div><!-- row -->
</div>
<%- include('footer') -%>
