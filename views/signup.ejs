<%- include('header') -%>
<% if (message.length > 0) { %>
	<div><%= message %></div>
<% } %>
<div class='container'>
	<div class='row'>
		<div class='col-md-6 col-md-offset-3'>
			<h2>Join Boreas Today</h2>
			<form action='/signup' method='post'>
				<div class='form-group'>
					<label for='nameInput'>Name</label>
					<input name='name' id='nameInput' class='form-control' type='text' placeholder='What should we call you?'>
				</div>
				<div class='form-group'>
					<label for='emailInput'>Email</label>
					<input name='email' id='emailInput' class='form-control' type='email' placeholder='you@your-domain.com'>
				</div>
				<div class='form-group'>
					<label for='passwordInput'>Password</label>
					<input name='password' id='passwordInput' class='form-control' type="password" placeholder='Shhh! This is super secret.'>
				</div>

				<button type="submit" class='btn btn-primary btn-block'>Join</button>
			</form>

			<hr>

			<div class='row'>
				<p class='text-center'>Already have an account? <a href="/login">Login</a></p>
				<p class='text-center'>Or go <a href="/">home</a>.</p>
			</div>
		</div>
	</div><!-- row -->
</div>
<%- include('footer') -%>
